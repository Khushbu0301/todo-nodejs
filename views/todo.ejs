<html>
    <head>
        <title>To do List</title>
        <script
        src="http://code.jquery.com/jquery-3.5.0.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
        <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <h1>My to do list</h1>
        <div id="todo-table">
            <form>
                <input type="text" name="item" placeholder="Add new item.." required />
                <button type="submit">Add Item</button>
            </form>
            <ul>
                <% for (var i=0; i < todos.length; i++){ %> 
                    <li><%= todos[i].item %></li>
                <% } %>
            </ul>
        </div>
    </body>
</html>